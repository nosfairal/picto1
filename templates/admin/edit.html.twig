{% extends 'baseTherapist.html.twig' %}

{% block title %}Modification du Profil | PictoPicto{% endblock %}

    {% block content %}
        <!-- titre de l'item choisi -->
        <div class="d-flex justify-content-between">
            <span class="title">Profil de {{ app.user.firstName }} {{ app.user.lastName }}</span>
            <a href="{{ path('admin') }}" class="btn btn-sm inHeader">Annuler</a>
        </div>
        <div class="container-fluid mt-3 py-2 px-4 background">
            <table class="table mx-auto">
                <tbody>
                {{ form_start(form) }}
                <tr>
                    <th>Nom</th>
                    <td class="text-end">{{ form_row(form.lastName, {'label_attr': {'class': 'd-none'}, 'attr': {'class': 'form-control-sm'}}) }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td class="text-end">{{ form_row(form.firstName, {'label_attr': {'class': 'd-none'}, 'attr': {'class': 'form-control-sm'}}) }}</td>
                </tr>
                <tr>
                    <th>Fonction</th>
                    <td class="text-end">{{ form_row(form.job, {'label_attr': {'class': 'd-none'}, 'attr': {'class': 'form-control-sm'}})}}</td>
                </tr>
                {#<tr>
                    <th>Scolarité</th>
                    <td class="text-end">{{ form_row(form.institution, {'label_attr': {'class': 'd-none'}, 'attr': {'class': 'form-control-sm'}}) }}</td>
                </tr>#}
                <tr>
                    <th>Email</th>
                    <td class="text-end">{{ form_row(form.email, {'label_attr': {'class': 'd-none'}, 'attr': {'class': 'form-control-sm'}}) }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-between my-4">
                <a href="{{ path('edit_password') }}">Modifier mon Mot de Passe</a>
                {{ form_row(form.submit, {'label': 'Modifier mon Profil', 'attr': {'class': 'btn btn-sm'}}) }}
            </div>
            {{ form_end(form) }}
        </div>
    {% endblock %}
