{% extends 'baseTherapist.html.twig' %}

{% block title %}{{ institution.name }} | PictoPicto{% endblock %}

{% block content %}
    <!-- titre de l'item choisi -->
    <span class="title">{{ institution.name }}</span>
    <div class="container-fluid mt-3 p-4 background">
        <table class="table">
            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ institution.name }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ institution.email }}</td>
            </tr>
            <tr>
                <th>Code</th>
                <td>{{ institution.code }}</td>
            </tr>
            </tbody>
        </table>

        <div class="d-flex justify-content-between mt-4">
            {{ include('institution/_delete_form.html.twig') }}
            <a href="{{ path('institution_edit', {'id': institution.id}) }}" class="btn">Modifier</a>
        </div>
    </div>
    <a href="{{ path('institution_index') }}" class="btn fixed-bottom d-inline-block me-auto ms-4 my-5">Retour Ã  la liste des instituts</a>
{% endblock %}
