{% extends 'baseTherapist.html.twig' %}

{% block title %}Liste des Institutions | PictoPicto{% endblock %}

{% block content %}
    <!-- titre de l'item choisi -->
    <div class="d-flex justify-content-between">
        <span class="title">Entreprises et Institutions</span>
        <a href="{{ path('institution_new') }}" class="btn block">Ajouter</a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
    {{ message }}</div>
    {% endfor %}

    <div class="mt-3">
        {% if notificationWarning %}
            <div class="alert alert-danger">{{ notificationWarning }}</div>
        {% endif %}
    </div>

    <div class="container-fluid mt-3 p-4 background">
        <table class="table">
            <thead>
            <tr>
                <th>Nom</th>
                <th>Code</th>
                <th class="block">Email</th>
                <th class="block"></th>
            </tr>
            </thead>
            <tbody>
            {% for institution in institutions %}
                <tr>
                    <td>{{ institution.name }}</td>
                    <td>{{ institution.code }}</td>
                    <td class="block">{{ institution.email }}</td>
                    <td class="block">
                        <a href="{{ path('institution_show', {'id': institution.id}) }}" class="btn btn-sm" title="Voir"><i class="bi bi-eye-fill"></i></a>
                        <a href="{{ path('institution_edit', {'id': institution.id}) }}" class="btn btn-sm" title="Modifier"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucune donnée trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </div>
{% endblock %}


