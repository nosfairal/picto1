{% extends 'baseTherapist.html.twig' %}

{% block title %}Création d'une Catégorie | PictoPicto{% endblock %}

{% block content %}
    <!-- titre de l'item choisi -->
    <span class="title">Ajout d'une Catégorie</span>
    {% if not form.vars.valid %}
        <ul class="alert alert-danger">
            {# on affiche en premier les erreurs globales (cas classiques) #}
            {% for error in form.vars.errors %}
                <li>{{error.message}}</li>
            {% endfor %}
            {# ainsi que les erreurs concernant chaque champs #}
            {% for child in form.children %}
                {# si le champ à des erreur #}
                {% if child.vars.errors is defined %}
                    {% for error in child.vars.errors %}
                        <li> {{error.message}} </li> {# on ajoute le label du champ devant l'erreur pour plus de précisions. #}
                    {% endfor %}
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}
    <div class="container-fluid mt-3 px-4 background">
        <div class="py-3">
            {{ form_start(form) }}
            <div class="row my-2">
                <div class="col">
                    {{ form_label(form.name) }}{{ form_widget(form.name) }}
                </div>
                <div class="col" id="some-custom-id">
                    {{ form_label(form.illustration) }}{{ form_widget(form.illustration) }}
                </div>
            </div>
            <div class="text-center my-5">
                {{ form_row(form.submit) }}
            </div>
            {{ form_end(form) }}
        </div>
        </div>

{% endblock %}